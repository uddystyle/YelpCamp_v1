<% include ../partials/header %>
  <div class="container">
    <h1 style="text-align: center">Add New Comment <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="col-6" style="width: 30%; margin: 30px auto;">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div> 
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </div>
        <a href="/campgrounds">Go Back</a>
      </div>
    </form>

  </div>
  <% include ../partials/footer %>